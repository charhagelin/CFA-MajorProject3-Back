<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form action="/" method="post">
      <input type="text" name="name" placeholder="Name of Food Item" />
      <input type="number" name="price" min="0" placeholder="Price of Food Item" />
      <select name="unit">
          <option value="kg" selected>kg</option>
          <option value="ea">ea</option>
          <option value="gram">gram</option>
          <option value="box">box</option>
        </select>
      <!-- <input type="file" name="imgFile" > -->
      <input type="submit" />
      </form>

      <ul>
         <% foodItems.forEach(foodItem => { %>
          <li> <%= foodItem.name %> $<%= foodItem.price %> <%= foodItem.unit %> <a href="/foodItem/<%= foodItem._id %>/edit">Edit</a> <a href="/foodItem/<%= foodItem._id %>/delete">Delete</a></li>
        <% }) %>
      </ul>

  </body>
</html>
